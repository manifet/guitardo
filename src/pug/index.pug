                            li(class="features__item")
                                div(class="features__smile")
                                    svg(width="139" height="139" viewBox="0 0 139 139")
                                        use(xlink:href="./images/sprites.svg#smile_3")
                                div(class="features__item-title") 13.000+ выпускников за 8 лет
                            li(class="features__item")
                                div(class="features__smile")
                                    svg(width="171" height="171" viewBox="0 0 171 171")
