                                div(class="features__item-title") Занятия с 6+ лет
                            li(class="features__item")
                                div(class="features__smile")
                                    svg(width="139" height="139" viewBox="0 0 139 139")
                                        use(xlink:href="./images/sprites.svg#smile_2")
